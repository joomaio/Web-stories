<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" method="upgrade" client="site">
    <name>mod_stories_search</name>
    <author>khang</author>
    <creationDate>2/12/2020</creationDate>
	<copyright>Copyright (C) Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>admin@admin.com</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
    <version>1.0.0</version>
    <description>module search cho web stories, không thể hoạt động nếu chưa có component stories</description>
    <files>
        <filename module="mod_stories_search">mod_stories_search.php</filename>
        <folder>tmpl</folder>
    </files>
	<languages folder="language"> 
		<language tag="en-GB">en-GB/en-GB.mod_stories_search.ini</language>
	</languages>
    <config>
		<fields name="params">
			<fieldset name="basic">
                <field
					name="placeholder"
					type="label"
					label="MOD_SEARCH_FIELD_PLACEHODLER_TEXT_DESC"
					description="MOD_SEARCH_FIELD_PLACEHODLER_TEXT_DESC"
				/>
                <field
					name="buttonText"
					type="label"
					label="MOD_SEARCH_FIELD_BUTTON_TEXT_DESC"
					description="MOD_SEARCH_FIELD_BUTTON_TEXT_DESC"
				/>
				<field 
					name="filterCategories" 
					type="radio" default="0" 
					label="MOD_SEARCH_FIELD_FILTER_CATEGORIES_DESC" 
					class="btn-group btn-group-yesno"
					>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field 
					name="filterDate" 
					type="radio" default="0" 
					label="MOD_SEARCH_FIELD_FILTER_CATEGORIES_DESC"
					description="MOD_SEARCH_FIELD_FILTER_CATEGORIES_DESC"
					class="btn-group btn-group-yesno"
					>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
		</fields>
	</config>

</extension>