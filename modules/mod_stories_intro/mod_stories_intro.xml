<extension type="module" version="3.1.0" method="install" client="site">
    <name>mod_stories_intro</name>
    <author>khang</author>
    <creationDate>12/2019</creationDate>
	<copyright>Copyright (C) Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>admin@admin.com</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
    <version>1.0.0</version>
    <description>Một module hiển thị intro trong component stories</description>
    <files>
        <filename module="mod_stories_intro">mod_stories_intro.php</filename>
        <folder>tmpl</folder>
    </files>
	<languages folder="language"> 
		<language tag="en-GB">en-GB/en-GB.mod_stories_intro.ini</language>
	</languages>
    
    <config>
        <fields name="params">
            <fieldset name="basic" >
                <field
					name="intro"
					type="editor"
					label="MOD_STORIES_INTRO"
					description="MOD_STORIES_INTRO_DESCRIPTION"
				/>
            </fieldset>
        </fields>
    </config>
</extension>